# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/phishing_detector

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# API Keys (REQUIRED - Get from respective services)
GOOGLE_SAFE_BROWSING_API_KEY=your_google_safe_browsing_api_key_here
VIRUSTOTAL_API_KEY=your_virustotal_api_key_here

# Application Security
SECRET_KEY=generate_with_openssl_rand_hex_32
API_KEY_HEADER=X-API-Key
ALLOWED_ORIGINS=http://localhost:4200,chrome-extension://*

# Rate Limiting
RATE_LIMIT_PER_MINUTE=10
RATE_LIMIT_PER_HOUR=100

# ML Model Configuration
MODEL_PATH=../models/trained/model_v1.0.0.pkl
MODEL_VERSION=v1.0.0
FEATURE_VERSION=v1.0

# Enrichment Configuration
ENABLE_WHOIS=true
ENABLE_DNS=true
ENABLE_GSB=true
ENABLE_VIRUSTOTAL=true
ENABLE_CONTENT_FETCH=false  # Set to true to enable HTML content analysis (slower)

# Cache TTL (in seconds)
CACHE_TTL_WHOIS=604800      # 7 days
CACHE_TTL_DNS=3600          # 1 hour
CACHE_TTL_GSB=1800          # 30 minutes
CACHE_TTL_VIRUSTOTAL=86400  # 24 hours
CACHE_TTL_IP_GEO=2592000    # 30 days

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_MAX_BYTES=10485760      # 10MB
LOG_BACKUP_COUNT=5

# Development Mode
DEBUG=false
USE_MOCK_APIS=false         # Set to true to use mock APIs (for testing without API keys)

# Data Retention
DATA_RETENTION_DAYS=30
CLEANUP_INTERVAL_HOURS=24

# Performance
MAX_WORKERS=4
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
REQUEST_TIMEOUT_SECONDS=30

# Frontend Configuration
VITE_API_URL=http://localhost:8000
VITE_API_VERSION=v1
